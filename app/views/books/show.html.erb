
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
			<tr>
				<td>
					<%= link_to (@bookidv.user) do %>
					<%= attachment_image_tag(@bookidv.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
					<%= @bookidv.user.name %>
					<% end %>
				</td>
				<td><%= link_to @bookidv.title, @book %></td>
				<td><%= @bookidv.body %></td>
				<% if @bookidv.user_id == current_user.id %>
				<% end %>
				<td>
					<% if @bookidv.favorited_by?(current_user) %>
					<%= link_to "I hate", book_favorites_path(@bookidv), method: :delete %>
					<%= @bookidv.favorites.count %> favorites
					<% else %>
					<%= link_to "I like", book_favorites_path(@bookidv), method: :post %>
					<%= @bookidv.favorites.count %> favorites
					<% end %>
				</td>
				<td><%= link_to "Edit",edit_book_path(@bookidv), class: "btn-sm btn-success edit_book_#{@bookidv.id}" %></td>
				<td><%= link_to "Destroy",book_path(@bookidv), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@bookidv.id}" %></td>
			</tr>

		</table>
	</div>


	<div class="container comments clearfix">
		<div class="row">
			<div class="col-sm-3">
				<%= form_for [@bookidv, @post_comment] do |f| %>
				<%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
				<%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
				<% end %>
			</div>
			<div class="col-sm-9">
				<td> <p>commnets</p>
					<% @bookidv.post_comments.count %> </a>
					<h2 class="comment-count"><%= @bookidv.post_comments.count %>件コメント</h2></td>
				</tr>
			</table>
			<table>
				<thead>
					<th>User</th>
					<th>commnet</th>
					<th>Posted at</th>
				</thead>
				<% @comment.each do |c| %>
				<td><%= @bookidv.user.name %></td>
				<td><%= c.comment %></td>
				<td><%= @bookidv.created_at.strftime('%Y/%m/%d') %></td>
				<%= link_to "削除",  book_post_comment_path(c.book_id, c.id), method: :delete %>
				<% end %>
			</table>
		</div>