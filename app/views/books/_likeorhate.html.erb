<% if book.favorited_by?(current_user) %>
		<%= link_to "I dislike", book_favorites_path(book.id), method: :delete, remote: true  %>
		<%= book.favorites.count %> favorites
<% else %>
		<%= link_to "I like", book_favorites_path(book.id), method: :post, remote: true %>
		<%= book.favorites.count %> favorites
<% end %>