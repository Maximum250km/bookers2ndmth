<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<!--name表示の追加-->
<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true, class: "name" %>
</div>
<!--name表示の追加-->

<div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: "email" %>
</div>

<div class="field">
  <%= f.label :postal_number %><br />
  <%= f.text_field :postal_number %>
</div>


 <div class="field">
  <%= f.label :prefecture %><br />
  <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name %>
</div>

<div class="field">
 <%= f.label :adress %><br />
 <%= f.text_field :adress %>

<div class="field">
 <%= f.label :street %><br />
 <%= f.text_field :street %>

<div class="field">
  <%= f.label :buildinf %><br />
  <%= f.text_field :address_building %>
</div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
  </div>

  <!--パスワード確認入力フォーム-->
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class: "btn btn-success" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
