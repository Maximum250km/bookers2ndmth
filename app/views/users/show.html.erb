<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= render 'users/profile', user: @user %>
			<!--同コントローラーのviewで表示ならusersは省略可 -->

			<h2>New book</h2>
			<%= render 'books/newform', book: @book %>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<!--books一覧 -->
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th>favorites</th>
						<th>commets</th>
					</tr>
				</thead>

				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to (book.user) do %>
							<%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg" %>
							<% end %>
						</td>
						<td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
						<td><%= book.body %></td>
						<td><% if book.favorited_by?(current_user) %>
							<%= link_to "I hate", book_favorites_path(book), method: :delete %>
							<%= book.favorites.count %> favorites
							<% else %>
							<%= link_to "I like", book_favorites_path(book), method: :post %>
							<%= book.favorites.count %> favorites
							<% end %></td>
							<td>
								<% book.post_comments.count %>
									<%= book.post_comments.count %>件コメント
							</td>
						</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
			<%= render 'users/address', user: @user %>
		</div>
		<!--books一覧 -->

